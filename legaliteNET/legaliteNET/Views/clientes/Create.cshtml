@model legaliteNET.Models.cliente

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    <div id="main">
        <section id="content" class="table-layout animated fadeIn">


            <div class="chute chute-center">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel">


                            <br>
                            <div class="panel-heading">
                                <span class="panel-title hidden-xs">CREAR CLIENTE</span>
                            </div>
                            <div class="panel-body pn">

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">


                                        <div class="form-group">


                                      
                                                <div class="form-group">

                                                    <div class="col-md-8">

                                                        <h6 class="mb20">NIT</h6>
                                                        @Html.EditorFor(model => model.nit, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.nit, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                            <div class="col-md-8">
                                                <h6 class="mb20">Nombre de Usuario</h6>
                                                @Html.EditorFor(model => model.nombreusuario, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.nombreusuario, "", new { @class = "text-danger" })
                                            </div>
                                        </div>


                                   

                                        <div class="form-group">

                                            <div class="col-md-8">
                                                <h6 class="mb20">Password</h6>
                                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">

                                            <div class="col-md-8">
                                                <h6 class="mb20">Nombre de asesor</h6>
                                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">


                                            <div class="col-md-8">

                                                <h6 class="mb20">Nombre de cliente</h6>
                                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">


                                            <div class="col-md-8">
                                                <h6 class="mb20">Departamento</h6>
                                                @Html.EditorFor(model => model.departamento, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.departamento, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">


                                            <div class="col-md-8">
                                                <h6 class="mb20">Valor</h6>
                                                @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.valor, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Crear" class="btn btn-bordered btn-primary pull-left" />
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div>
                                    <button type="submit" class="btn btn-bordered btn-primary pull-right">@Html.ActionLink("Salir ", "Index")</button>

                                </div>







                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>


</body>
</html>